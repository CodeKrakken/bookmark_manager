<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <a href="<%= bookmark.url %>" >
        <%= bookmark.title %>
      </a>
    </li>
  <% end %>
</ul>

<form action="/new" method="post">
  <input type="text" name="title" placeholder="Name of site"/>
  <input type="text" name="url" placeholder="URL"/>
  <input type="submit" value="Submit"/>
</form>
